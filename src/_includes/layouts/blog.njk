---
layout: main
---
<script src="/javascript/mylikebutton.js"></script>

<article class="blog-post">

    <h1>{{ title }}</h1>
    <i class="bi bi-calendar-heart"></i> <time datetime="{{ page.date | dateIso }}">{{ page.date | dateReadable }}</time> | 
    {% if tags %}
    {% for tag in tags %}
      {% if tag != "blog" and tag != "posts" %}
        <a href="/blog/tags/{{ tag | slug }}/">#{{ tag }}</a>{% if not loop.last %}, {% endif %}
      {% endif %}
    {% endfor %}

  {% endif %}

  
  <div class="blog-content">
    {{ content | safe }}
  </div>
---
<br><br>
<!-- Google Form Like Button -->
<form class="mylikebutton">
  ü§ç
</form>


</article>
<nav class="post-navigation">
  <div class="prev-post">
    {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
    {% if previousPost %}
      <a href="{{ previousPost.url }}">‚Üê {{ previousPost.data.title }}</a>
    {% endif %}
  </div>
  <div class="next-post">
    {% set nextPost = collections.blog | getNextCollectionItem(page) %}
    {% if nextPost %}
      <a href="{{ nextPost.url }}">{{ nextPost.data.title }} ‚Üí</a>
    {% endif %}
  </div>
</nav>