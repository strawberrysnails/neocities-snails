<!-- STYLE SWITCHER -->
<script>
  function changeStyle(style) {
    if (!style) {
      style = localStorage.getItem("style") || "maintheme";
    }

    const themeLink = document.getElementById("theme-style");
    themeLink.setAttribute("href", `/css/${style}.css`);

    localStorage.setItem("style", style);
  }

  changeStyle();
</script>

